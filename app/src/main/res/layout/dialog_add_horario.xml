<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_marginBottom="5sp"
        android:layout_marginStart="7sp"
        android:layout_marginEnd="7sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txtSub"
            android:text="@string/tiempoConsulta"
            />

        <Spinner
            android:id="@+id/tiempoConsulta"
            style="@style/spinBox"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:drawSelectorOnTop="true"
            android:entries="@array/tiempoConsultas"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="5sp"
        android:layout_marginStart="7sp"
        android:layout_marginEnd="7sp"
        >

        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txtSub0"
            android:text="@string/horario"
            />

        <LinearLayout
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/txtSub"
                    android:text="@string/horaInicio"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    style="@style/txtSub2"
                    android:text="@string/hhmm"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/hhI"
                        style="@style/spinBox"
                        android:layout_width="60sp"
                        android:layout_height="30sp"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/horas"
                        />
                    <TextView
                        android:layout_width="15sp"
                        android:layout_height="30sp"
                        style="@style/txtSub2"
                        android:text=":"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                    <Spinner
                        android:id="@+id/mmI"
                        style="@style/spinBox"
                        android:layout_width="60sp"
                        android:layout_height="30sp"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/minutos"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/txtSub"
                    android:text="@string/horaFinal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    style="@style/txtSub2"
                    android:text="@string/hhmm"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/hhF"
                        style="@style/spinBox"
                        android:layout_width="60sp"
                        android:layout_height="30sp"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/horas"
                        />
                    <TextView
                        android:layout_width="15sp"
                        android:layout_height="30sp"
                        style="@style/txtSub2"
                        android:text=":"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                    <Spinner
                        android:id="@+id/mmF"
                        style="@style/spinBox"
                        android:layout_width="60sp"
                        android:layout_height="30sp"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/minutos"
                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
