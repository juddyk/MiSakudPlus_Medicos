<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appdemo.mi_salud.misakudplus_medicos.UI_registro.registroII">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="5sp">

        <!--BANCOS DE LUGAR DE RESIDENCIA-->
        <LinearLayout
            android:id="@+id/vistaResidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/regDepr"
                    android:layout_width="35sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_height="30sp"
                    android:drawSelectorOnTop="true"
                    android:layout_weight="1"
                    android:entries="@array/departamentos"
                    style="@style/spinBox"

                    />

                <Spinner
                    android:id="@+id/regMunc"
                    android:layout_width="35sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_height="30sp"
                    android:drawSelectorOnTop="true"
                    android:layout_weight="1"
                    android:entries="@array/mun1"
                    style="@style/spinBox"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/regDir"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_txt"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="5sp"
                        style="@style/txtBox3"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:hint="@string/reg_direccion"
                        />

                    <ImageButton
                        android:id="@+id/btnDir"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:src="@drawable/editar"
                        android:scaleType="fitCenter"
                        android:padding="5sp"
                        android:background="@drawable/img_btn"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="15sp"
                        android:contentDescription="@string/reg_direccion"
                        />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <!--7 BANCOS DE TELEFONOS-->
        <LinearLayout
            android:id="@+id/vistaTelefonos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5sp"
            >

            <EditText
                android:id="@+id/regCel"
                style="@style/txtBoxNum"
                android:hint="@string/reg_celular"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:background="@drawable/round_txt"
                android:labelFor="@+id/regCel" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5sp">

                <EditText
                    android:labelFor="@+id/regFijo1"
                    android:id="@+id/regFijo1"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/round_txt"
                    style="@style/txtBoxNum"
                    android:layout_weight="1"
                    android:hint="@string/reg_fijo1"
                    />

                <EditText
                    android:id="@+id/regFijo2"
                    android:labelFor="@+id/regFijo2"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/round_txt"
                    style="@style/txtBoxNum"
                    android:layout_weight="1"
                    android:hint="@string/reg_fijo2"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--BANCOS DE CORREO-->
        <LinearLayout
            android:id="@+id/vistaCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10sp"
            >

            <EditText
                android:id="@+id/regEmail1"
                android:labelFor="@+id/regEmail1"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="@drawable/round_txt"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                style="@style/txtBoxEmail"
                android:hint="@string/reg_correo1"
                />

            <EditText
                android:layout_marginTop="5sp"
                android:id="@+id/regEmail2"
                android:labelFor="@+id/regEmail2"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="@drawable/round_txt"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                style="@style/txtBoxEmail"
                android:hint="@string/reg_correo2"
                />
        </LinearLayout>

        <TextView
            android:layout_marginTop="50sp"
            android:gravity="end"
            android:layout_marginEnd="10sp"
            android:id="@+id/idNext"
            style="@style/txtSub0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/reg_next"
            android:visibility="visible" />

    </LinearLayout>

</FrameLayout>
