<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        >
        <ImageView
            android:id="@+id/foto"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@drawable/profile2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <!-- Nombre Paciente -->
                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txtSUB"
                    />
                <!-- FECHA -->
                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txtSUB0"
                    />
                <!-- HORA -->
                <TextView
                    android:id="@+id/hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txtSUB0"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="end"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        >
        <!-- SEDE -->
        <LinearLayout
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtSub"
                android:text="@string/puntoAC"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/sede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtSub0"
                android:layout_weight="1"
                />
        </LinearLayout>

        <!-- Tipo de Consulta -->
        <LinearLayout
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtSub"
                android:text="@string/tipoCONSULTA"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tipoConsul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtSub0"
                android:layout_weight="1"
                />
        </LinearLayout>

        <!-- Modalidad de Atencion -->
        <LinearLayout
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtSub"
                android:text="@string/modATENCION"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/modAtencion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtSub0"
                android:layout_weight="1"
                />
        </LinearLayout>


        <!-- Tiempo Consulta -->
        <LinearLayout
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtSub"
                android:text="@string/tiempoXCONSULTA"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tiempoConsul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtSub0"
                android:layout_weight="1"
                />
        </LinearLayout>


    </LinearLayout>

